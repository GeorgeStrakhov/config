# after cloning this directory to ~/dev/config, put the following line at the end of ~/.bashrc
# source ~/dev/config/gs_bash_config

# aliases
alias cdd="cd ~/dev/"
alias cdp="cd ~/Dropbox/play/processing3/"
alias server="python -m SimpleHTTPServer 8000"
alias runsketch="~/dev/config/runprocessing.sh"
alias gh-deploy="~/dev/config/gh-deploy.sh"

# fix multiple cursors plugin for vim (key binding)
stty ixany
stty ixoff -ixon

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh" # This loads nvm

#iTerm color fix
export CLICOLOR=1
export TERM=xterm-256color
export EDITOR='vim'
